@model IEnumerable<trialofAD.Models.User>
@{
    ViewBag.Title = "GetAllUsers";
}

<br />

<form>
    <div class="form-group">
        <label for="SearchInput" class="col-sm-2 col-form-label">Search for User</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="SearchInput"
                   onkeyup="myFunction()" placeholder="Enter User">
        </div>
    </div>
</form>

<br />
<br />
@Html.Raw(TempData["msg"])

<table class="table table-bordered table-striped" id="tblUsers">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Samaccountname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Samaccountname)
            </td>
            <td><a asp-page="./Details/" asp-route-UserId="@item.Id">Details</a> </td>
            <td><a asp-page="./Edit/" asp-route-UserId="@item.Id">Edit</a> </td>
        </tr>
    }

</table>

<br />
<p>
    <a class="btn btn-primary" asp-page="./Create">
        Add New
    </a>
</p>


@section scripts
{
    <script>

        function myFunction() {
            var input, filter, table, tr, td, i;
            input = document.getElementById("SearchInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("tblUsers");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>
}